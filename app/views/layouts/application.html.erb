<!DOCTYPE html>
<html>
  <head>
    <title>KabuApp</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
	
  <body>
    <header class="navbar">
	    <section class="navbar-section">
	      <%= link_to "KABU APP", root_path, class: "navbar-brand mr-2" %>
	    </section>
      
		  <% if user_signed_in? %>
        <% if current_user.for_business? %>
          <section class="navbar-section">
            <%= link_to "Provide A Service", new_business_service_path %>
            <%= link_to "Show My Services", business_services_path %>
          </section>
        <% else %>
          <%= link_to 'Favorites', favorites_path %>
        <% end %>
        <%= link_to 'Sign out', destroy_user_session_path, method: :delete %>
      <% else %>
        <%= link_to 'Sign in', new_user_session_path %>
        <%= link_to 'Sign up', new_user_registration_path %>
      <% end %>
  	</header>

  	<% if notice.present? %>
	  <p class="text-success"><%= notice %></p>
    <% end %>
  	<% if alert.present? %>
      <p class="text-error"><%= alert %></p>
  	<% end %>

  	<%= yield %>

  </body>
</html>
