<h1>Create new service</h1>

<%= simple_form_for @service, url: business_services_path do |f| %>
  <%= f.input :title, label: false, placeholder: 'Title' %>
  <%= f.input :description, label: false, placeholder: 'Description' %>
  <%= f.input :price, label: false, placeholder: 'Price' %>
  <%= f.input :category_id, collection: @categories, label: false, placeholder: 'Category' %>
  <%= f.input :picture, label: false, placeholder: 'Image' %>
  <%= f.submit 'Create', class: 'btn' %>
<% end %>